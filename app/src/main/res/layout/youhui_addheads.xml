<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#F5F5F5"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/fl_viewpager"
        android:layout_width="match_parent"
        android:layout_height="280dip">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>

        <LinearLayout
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">
        </LinearLayout>
    </FrameLayout>


        <LinearLayout

            android:layout_marginBottom="8dip"
            android:layout_marginTop="8dip"
            android:id="@+id/youhui_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/youhui_renqi"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:scaleType="fitXY"
                android:clickable="true"
                android:src="@mipmap/top100"/>

            <LinearLayout
                android:layout_weight="1.0"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:clickable="true"
                    android:scaleType="fitXY"
                    android:id="@+id/youhui_tqh"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_weight="1.0"
                    android:src="@mipmap/taoqh"/>

                <ImageView
                    android:clickable="true"
                    android:id="@+id/youhui_jhs"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_weight="1.0"
                    android:scaleType="fitXY"
                    android:src="@mipmap/jhs"/>
            </LinearLayout>
        </LinearLayout>




    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="10dip"
            android:paddingBottom="15dip"
            android:paddingTop="15dip"
            android:textSize="16sp"
            android:textColor="@color/newziblack"
            android:text="领券直播"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>