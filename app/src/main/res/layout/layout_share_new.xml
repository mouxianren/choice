<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@color/red">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="40dip"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_width="11.36dip"
                android:layout_height="20dip"
                android:layout_gravity="center"
                android:layout_marginLeft="10dip"
                android:src="@mipmap/arrow_2"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_three_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="分享APP"
                android:textColor="@color/white"
                android:textSize="17sp"/>
        </LinearLayout>


    </RelativeLayout>

    <View
        android:id="@+id/view_f4"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_below="@id/rl_title"
        android:background="#B2B2B2"/>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_sharetext"
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dip"
                android:text="使用挑一挑APP领券优惠、立减50%"
                android:textColor="@color/newziblack"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:text="每日上新万件，更多优惠等你来"
                android:textColor="@color/newziblack"
                android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_share_text_new"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dip"
                    android:text="邀请朋友越多，获得奖励越多"
                    android:textStyle="bold"
                    android:textColor="@color/newziblack"
                    android:textSize="17sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:text="挑一挑APP分享给朋友"
                    android:textColor="@color/newziblack"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:text="朋友使用APP下单购物，即可获得相应奖励"
                    android:textColor="@color/newziblack"
                    android:textSize="15sp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_yaoqin"
                android:layout_width="@dimen/erweima"
                android:layout_height="@dimen/erweima"
                android:layout_marginTop="30dip"
                android:scaleType="fitXY"
                android:src="@mipmap/erweima"/>

            <TextView
                android:id="@+id/tv_title_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:text="邀请码"
                android:textColor="@color/newzigrey"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_title_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:layout_marginBottom="15dip"
                android:text="323232"
                android:textColor="@color/red"
                android:textSize="22sp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
android:visibility="gone"
        android:id="@+id/ll_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#D5D2D0"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:layout_marginTop="15dip">

            <LinearLayout
                android:id="@+id/ll_weixin"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:scaleType="fitXY"
                    android:src="@mipmap/share_weixin"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:text="微信"
                    android:textColor="@color/newziblack"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_weixin_friend"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:scaleType="fitXY"
                    android:src="@mipmap/share_friend"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:text="微信朋友圈"
                    android:textColor="@color/newziblack"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_qq"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:scaleType="fitXY"
                    android:src="@mipmap/share_qq"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:text="QQ"
                    android:textColor="@color/newziblack"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_qqspace"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:scaleType="fitXY"
                    android:src="@mipmap/share_space"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:text="QQ空间"
                    android:textColor="@color/newziblack"/>
            </LinearLayout>

        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/fragment_youhui_rl_pb"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/progress_red"
            android:indeterminateDuration="1500"
            />
    </RelativeLayout>
</FrameLayout>
</LinearLayout>