<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/background"
              android:layout_width="match_parent"
              android:fitsSystemWindows="true"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@color/red" >

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="40dip"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true" >

            <ImageView
                android:layout_width="11.36dip"
                android:layout_height="20dip"
                android:layout_gravity="center"
                android:layout_marginLeft="10dip"
                android:src="@mipmap/arrow_2"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_three_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:text="优品特卖"
                android:textSize="17sp" />
        </LinearLayout>


    </RelativeLayout>
    <View
        android:id="@+id/view_f4"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_below="@id/rl_title"
        android:background="#B2B2B2" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.yiqi.choose.view.XListView
        android:visibility="gone"
        android:id="@+id/home_jinxuan_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:dividerHeight="0dip"
        android:listSelector="#00000000">
    </com.yiqi.choose.view.XListView>


    <LinearLayout
        android:id="@+id/home_jinxuan_nogoods"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">
        <ImageView
            android:src="@mipmap/nogoods_1"
            android:scaleType="fitXY"
            android:layout_width="100dip"
            android:layout_height="115dip"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/zigrey"
            android:textSize="16sp"
            android:text="暂无商品,请稍后再来"
            android:layout_marginTop="35dip"
            android:layout_height="wrap_content"/>


    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/home_jinxuan_ll_noweb"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">
        <ImageView
            android:src="@mipmap/new_nowife"
            android:scaleType="fitXY"
            android:layout_width="160dip"
            android:layout_height="135dip"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/zigrey"
            android:textSize="15sp"
            android:text="网络未连接"
            android:layout_marginTop="55dip"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/zigrey"
            android:textSize="15sp"
            android:text="请检查网络连接或网络访问权限"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/home_fragment_tv_retro"
            android:paddingLeft="30dip"
            android:paddingRight="30dip"
            android:layout_marginTop="25dp"
            android:text="点击重试"
            android:paddingTop="8dip"
            android:paddingBottom="8dip"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/ttg_red_msg_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/home_jinxuan_rl_pg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/progress_red"
            android:indeterminateDuration="1500"
            />


    </RelativeLayout>
    <ImageView
        android:visibility="gone"
        android:id="@+id/home_arraw"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@mipmap/uparrow"
        android:layout_marginRight="35dip"
        android:layout_marginBottom="40dip"
        android:layout_width="40dip"
        android:layout_height="40dip"/>
    </RelativeLayout>

</LinearLayout>