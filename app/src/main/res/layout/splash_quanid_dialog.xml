<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="300dip"
              android:layout_height="wrap_content"
              android:background="@drawable/ttg_white_msg_shape"
              android:gravity="center_horizontal"
              android:padding="0dp"
              android:baselineAligned="false"
              android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"

        android:gravity="center"
        android:text="加入购物圈"
        android:textColor="@color/ziblack"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/splash_dg_ethint"
android:layout_marginTop="25dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="@drawable/input_gray"
        android:hint="请输入APP推荐人的邀请码..."
        android:singleLine="true"
         android:maxLines="1"
        android:textSize="13sp" />

    <TextView
     android:clickable="true"
        android:id="@+id/splash_dg_bt_getquan"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="@drawable/ttg_red_msg_shape"
        android:text="加入圈子"
        android:padding="10dip"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="20dip"
        android:textColor="@color/white"
        />

</LinearLayout>