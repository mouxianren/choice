<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >




    <LinearLayout
android:layout_marginTop="8dip"
android:layout_marginBottom="8dip"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"

        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/good_img"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:scaleType="fitXY"
            android:src="@mipmap/picture" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:gravity="center_vertical"
            android:orientation="vertical" >



            <TextView
                android:id="@+id/goods_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="两个女生了快跟你说过谁开个能考上功能看四姑娘山那个那个撒尿哥看上个过了时间官商勾结"
                android:textColor="@color/newziblack" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/goods_discount_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥50"
                    android:textColor="@color/red"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/goods_ori_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="￥40"
                    android:textColor="@color/zigrey"
                    android:textSize="12sp" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip" >


                <TextView
                    android:textSize="13sp"
                    android:id="@+id/tv_chengji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已售10000件"
                    android:textColor="@color/newzigrey"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="4dip"
                    android:text="包邮"
                    android:textColor="@color/newzigrey" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1.2dip"
        android:background="@color/background" >
        </LinearLayout>

</LinearLayout>