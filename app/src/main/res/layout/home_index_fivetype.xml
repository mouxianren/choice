<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="8dip"
        android:id="@+id/ll_type_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/youhui_renqi"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:scaleType="fitXY"
            android:clickable="true"
            android:src="@mipmap/top100"/>

        <LinearLayout
            android:layout_weight="1.0"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:clickable="true"
                android:scaleType="fitXY"
                android:id="@+id/youhui_tqh"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1.0"
                android:src="@mipmap/taoqh"/>

            <ImageView
                android:clickable="true"
                android:id="@+id/youhui_jhs"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1.0"
                android:scaleType="fitXY"
                android:src="@mipmap/jhs"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_type_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_chaozhi"
            android:clickable="true"
            android:scaleType="fitXY"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:src="@mipmap/chaozhi"/>

        <ImageView
           android:id="@+id/iv_rexiao"
            android:clickable="true"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:scaleType="fitXY"
            android:src="@mipmap/rexiaobang"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dip"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="10dip"
            android:paddingBottom="16dip"
            android:paddingTop="16dip"
            android:textSize="16sp"
            android:textColor="@color/newziblack"
            android:text="领券直播"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>