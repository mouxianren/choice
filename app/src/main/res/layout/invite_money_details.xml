<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@color/red">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="40dip"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_width="11.36dip"
                android:layout_height="20dip"
                android:layout_gravity="center"
                android:layout_marginLeft="10dip"
                android:src="@mipmap/arrow_2"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_three_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="邀请赚钱"
                android:textColor="@color/white"
                android:textSize="17sp"/>
        </LinearLayout>


    </RelativeLayout>


    <ScrollView
        android:id="@+id/sv_invite"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"
        android:background="#f3f3f3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dip"
                android:gravity="center"
                android:text="账户余额(元)"
                android:textColor="@color/newziblack"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_all_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:gravity="center"
                android:text=""
                android:textColor="@color/red"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="match_parent"
                android:layout_height="41dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/wode_fankui_shape"
                android:clickable="true"
                android:gravity="center"
                android:text="分享赚大钱"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="12dip"
                android:gravity="center"
                android:text="账户余额将于每月结算后3个工作日内自动提现至您的支付宝"
                android:textColor="@color/newzigrey"
                android:textSize="10sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:layout_marginTop="14dp"
                android:background="@color/redline"
                />

            <TextView
                android:id="@+id/tv_modie_alipy"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="13dp"
                android:paddingTop="10dip"
                android:text="填写支付宝账户"
                android:textColor="#f44336"
                android:textSize="16sp"/>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_modie_alipy"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_alipy"
                    android:paddingBottom="13dp"
                    android:paddingTop="10dip"
                    android:textSize="15sp"
                    android:layout_marginLeft="15dip"
                    android:textColor="@color/newziblack"
                    android:layout_width="0dip"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_marginRight="15dip"
                    android:src="@mipmap/alipay_modie"
                    android:layout_width="22dip"
                    android:layout_height="22dip"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:background="#f3f3f3"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:orientation="horizontal"
              >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dip"
                    android:layout_marginTop="15dip"
                    android:layout_weight="1.0"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="APP邀请成功数(个)"
                        android:textColor="@color/newzigrey"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/tv_invite_sucess"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dip"
                        android:text="0"
                        android:textColor="@color/newziblack"
                        android:textSize="18sp"

                        />
                </LinearLayout>

                <View
                    android:layout_width="1.5px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="12dip"
                    android:layout_marginTop="12dip"
                    android:background="@color/redline"
                    />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dip"
                    android:layout_marginTop="15dip"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="昨日预估收入(元)"
                        android:textColor="@color/newzigrey"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/tv_yestoday_mkmoeny"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dip"
                        android:text="0"
                        android:textColor="@color/newziblack"
                        android:textSize="18sp"

                        />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="@color/redline"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dip"
                    android:layout_marginTop="15dip"
                    android:layout_weight="1.0"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上月预估收入(元)"
                        android:textColor="@color/newzigrey"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/tv_lastmonth_mkmoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dip"
                        android:text="0"
                        android:textColor="@color/newziblack"
                        android:textSize="18sp"

                        />
                </LinearLayout>

                <View
                    android:layout_width="1.5px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="12dip"
                    android:layout_marginTop="12dip"
                    android:background="@color/redline"
                    />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dip"
                    android:layout_marginTop="15dip"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本月预估收入(元)"
                        android:textColor="@color/newzigrey"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/tv_month_mkmoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dip"
                        android:text="0"
                        android:textColor="@color/newziblack"
                        android:textSize="18sp"

                        />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="@color/redline"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:padding="15dip"
                android:text="每月25日结算上月预估收入，本月预估收入则下月25日结算。"
                android:textColor="@color/newzigrey"
                android:textSize="10sp"/>

            <LinearLayout
              android:id="@+id/ll_list"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f3f3f3"
                android:paddingBottom="10dip"
                android:paddingLeft="15dp"
                android:paddingTop="10dip"
                android:text="流水记录"
                android:textColor="@color/newziblack"
                android:textSize="15sp"
                />

            <LinearLayout
                android:id="@+id/ll_list_ruzhang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_ruzhang"
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:src="@mipmap/ruzhang"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dip"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_ruzhang"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:text="入账"
                                android:textColor="@color/newziblack"
                                android:textSize="15sp"
                                />

                            <TextView
                                android:id="@+id/tv_list_ruzhang_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:text="0"
                                android:textColor="@color/newziblack"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_list_ruzhang_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dip"
                            android:textColor="@color/newzidoblegrey"
                            android:textSize="15sp"
                            />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5px"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="15dip"
                    android:background="@color/redline"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_list_chuzhang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dip"
                    android:layout_marginBottom="15dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_tixian"
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:src="@mipmap/tixian"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dip"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_tixian"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:text="提现"
                                android:textColor="@color/newziblack"
                                android:textSize="15sp"
                                />

                            <TextView
                                android:id="@+id/tv_list_chuzhang_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:text="0"
                                android:textColor="@color/newziblack"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_list_chuzhang_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dip"
                            android:textColor="@color/newzidoblegrey"
                            android:textSize="15sp"
                            />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
              </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f3f3f3"
        android:gravity="center"
        android:padding="10dip"
        android:text="本活动最终解释权归挑一挑所有"
        android:textColor="@color/newzidoblegrey"
        android:textSize="12sp"/>
</LinearLayout>