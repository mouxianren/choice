<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:fitsSystemWindows="true"
              android:background="@color/background"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@color/red" >

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="40dip"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true" >

            <ImageView
                android:layout_width="11.36dip"
                android:layout_height="20dip"
                android:layout_gravity="center"
                android:layout_marginLeft="10dip"
                android:src="@mipmap/arrow_2"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_three_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:text="分享APP"
                android:textSize="17sp" />
        </LinearLayout>


    </RelativeLayout>
    <View
        android:id="@+id/view_f4"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_below="@id/rl_title"
        android:background="#B2B2B2" />
    
<TextView
    android:id="@+id/tv_title_1"
    android:layout_below="@id/rl_title"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="45dip"
    android:textColor="@color/newziblack"
    android:textSize="15sp"
    android:text="使用挑一挑APP领券优惠、立减50%"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_title_2"
        android:layout_below="@id/tv_title_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dip"
        android:textColor="@color/newziblack"
        android:textSize="15sp"
        android:text="每日上新万件，更多优惠等你来"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/iv_yaoqin"
        android:layout_below="@id/tv_title_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dip"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        android:layout_width="188dip"
        android:layout_height="188dip"/>

    <TextView
        android:id="@+id/tv_title_3"
        android:layout_below="@id/iv_yaoqin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dip"
        android:textColor="@color/newzigrey"
        android:textSize="15sp"
        android:text="邀请码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_title_4"
        android:layout_below="@id/tv_title_3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dip"
        android:textColor="@color/red"
        android:textSize="22sp"
        android:text="323232"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>